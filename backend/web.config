<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>


    <modules>
      <remove name="WebDAVModule" />
    </modules>
    <handlers>
      <remove name="WebDAV" />
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- ✅ HTTP Verb တွေ (DELETE/PUT/PATCH/OPTIONS) ခွင့်ပေးရန် -->
    <security>
      <requestFiltering>
        <verbs allowUnlisted="true">
          <add verb="DELETE" allowed="true" />
          <add verb="PUT" allowed="true" />
          <add verb="PATCH" allowed="true" />
          <add verb="OPTIONS" allowed="true" />
        </verbs>
      </requestFiltering>
    </security>

    <!-- 🖼 Static Content (images, etc.) -->
    <staticContent>
      <mimeMap fileExtension=".jpg" mimeType="image/jpeg" />
      <mimeMap fileExtension=".jpeg" mimeType="image/jpeg" />
      <mimeMap fileExtension=".png" mimeType="image/png" />
    </staticContent>

    <!-- 🔄 Rewrite Rules -->
    <rewrite>
      <rules>
        <!-- public folder ကို Node.js ဆီမပို့ဘဲ skip -->
        <rule name="IgnoreUploads" stopProcessing="true">
          <match url="^public/(.*)$" />
          <action type="None" />
        </rule>
        <!-- အခြား route အားလုံးကို Node.js ဆီပို့ -->
        <rule name="NodeApp" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

  </system.webServer>
</configuration>
<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>


    <modules>
      <remove name="WebDAVModule" />
    </modules>
    <handlers>
      <remove name="WebDAV" />
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- âœ… HTTP Verb á€á€½á€± (DELETE/PUT/PATCH/OPTIONS) á€á€½á€„á€·á€ºá€•á€±á€¸á€›á€”á€º -->
    <security>
      <requestFiltering>
        <verbs allowUnlisted="true">
          <add verb="DELETE" allowed="true" />
          <add verb="PUT" allowed="true" />
          <add verb="PATCH" allowed="true" />
          <add verb="OPTIONS" allowed="true" />
        </verbs>
      </requestFiltering>
    </security>

    <!-- ðŸ–¼ Static Content (images, etc.) -->
    <staticContent>
      <mimeMap fileExtension=".jpg" mimeType="image/jpeg" />
      <mimeMap fileExtension=".jpeg" mimeType="image/jpeg" />
      <mimeMap fileExtension=".png" mimeType="image/png" />
    </staticContent>

    <!-- ðŸ”„ Rewrite Rules -->
    <rewrite>
      <rules>
        <!-- public folder á€€á€­á€¯ Node.js á€†á€®á€™á€•á€­á€¯á€·á€˜á€² skip -->
        <rule name="IgnoreUploads" stopProcessing="true">
          <match url="^public/(.*)$" />
          <action type="None" />
        </rule>
        <!-- á€¡á€á€¼á€¬á€¸ route á€¡á€¬á€¸á€œá€¯á€¶á€¸á€€á€­á€¯ Node.js á€†á€®á€•á€­á€¯á€· -->
        <rule name="NodeApp" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

  </system.webServer>
</configuration>